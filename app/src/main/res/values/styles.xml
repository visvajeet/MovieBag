<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleBold">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyleSemiBold">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:minHeight">@dimen/_17sdp</item>
        <item name="android:maxHeight">@dimen/_17sdp</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:transformPivotY">0dp</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>


    <style name="CardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayCardView</item>
    </style>

    <style name="ShapeAppearanceOverlayCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="RatingChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextStyleMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="chipCornerRadius">@dimen/_8sdp</item>
        <item name="chipIcon">@drawable/ic_start</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconSize">@dimen/_12sdp</item>
        <item name="iconStartPadding">@dimen/_8sdp</item>
    </style>
</resources>